{
  "source": {
    "include": ["./"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|out/|.github/)"
  },
  "plugins": ["plugins/markdown"],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  "opts": {
    "encoding": "utf8",
    "readme": "./README.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "theme": "dark",
      "menu": [
        {
          "title": "Home",
          "link": "https://bijou.js.org"
        },
        {
          "title": "Github",
          "link": "https://github.com/bijou-js/bijou.js",
          "target": "_blank"
        }
      ]
    }
  }
}

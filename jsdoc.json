{
  "source": {
    "include": ["./"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|out/|.github/)"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true
  },
  // 
  "opts": {
    "recurse": true,
    "destination": "./docs/",
    "readme": "README.md",
    "template": "./node_modules/toast-jsdoc"
  }
}
